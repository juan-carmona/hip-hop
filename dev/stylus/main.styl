/* ========================= Contenido Tarjetas Kevin ========================= */


.contenido
	height 100%
	border-radius 1%
	background-color #11111E

.tarjeta
	height 100vh
	background-image url("../img/city-5.jpg")

.display-4
	font-family Montserrat
	font-size 40px
	color #FCB932
	background-color #11111E
	padding 30px
	display inline-flex
	box-shadow 10px 32px 57px -21px rgba(0,0,0,1)


.artist
	position relative
	img
		width 22rem

.redes
	position absolute
	bottom 30px
	left 50px
	i
		line-height 40px
		height 40px
		width 40px
		background-color #11111E
	a
		color #FCB932

.titulo
	font-family Montserrat
	font-size 50px
	color #FCB932

.nombre
	font-family Lato
	font-size 20px
	color #CC8E29

.descripcion
	font-family Esteban
	font-size 16px
	color #ffff
	line-height 1.5


.icono
	display inline-block
	margin-left 26px
	margin-top 1em
	text-align center

.singer
	margin-left 0

p
	font-family Esteban
	font-size 12px
	color #ffff
	margin-top 5px

.song
	margin-left 0
	background-color #C12B41
	height 70px
	width 70px

.col-md-5
	padding-left 0
	margin-left 25px
	background-color #09090F
	box-shadow 10px 32px 57px -21px rgba(0,0,0,1)


.title1
	font-family Lato
	font-size 16px
	span
		font-size 14px
		color #999999

.d-flex
	a
		display inline-flex
		text-decoration none

.carousel-indicators
	position absolute
	text-align -webkit-right
	bottom 140px
	li
		height 30px
		border-radius 50%
		transform scale(.5)

@media only screen and (min-width: 992px)
	.artist
		img
			height 100%

	.songs
		margin-bottom 3em



@media only screen and (max-width: 991px)
	.contenido
		border-radius 0

	.artist
		img
			box-shadow 10px 32px 57px -21px rgba(0,0,0,1)

	.songs
		margin-bottom 3em

	.redes2
		a
			color #ffff

	.carousel-indicators
		position fixed
		bottom 0
		background-color rgba(0,0,0,1)
		margin-bottom 0
		height 10%
		align-items center
		li
			height 30px
			border-radius 50%
			transform scale(.5)


@media only screen and (max-width: 320px)
	.investor
		margin-left 0



